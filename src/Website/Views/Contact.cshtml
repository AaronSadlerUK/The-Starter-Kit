@inherits UmbracoTemplatePage<Contact>
@using ContentModels = Umbraco.Web.PublishedContentModels;
@using Terratype;
@{
    Layout = "Master.cshtml";
}
@Html.Partial("~/Views/Partials/SectionHeader.cshtml")

<section class="section">
    <div class="container">

        <div class="row">

            <div class="col-md-6">
                <h2>@Model.Content.MapHeader</h2>
                @Html.Terratype(Model.Content.Map)
            </div>

            <div class="col-md-6">
                <h2>@Model.Content.ContactFormHeader</h2>
                @Model.Content.ContactIntro
                @if (ApplicationContext.Services.MacroService.GetByAlias("renderUmbracoForm") == null)
                {
                    <p class="compat-msg">
                        <strong>Umbraco Forms is required</strong> to render this form. It's a breeze to install, all you have to do is
                        go to the <em>Umbraco Forms</em> section in the back office and click Install, that's it! :) 
                    </p>
                }
                else
                {
                    @Umbraco.RenderMacro("renderUmbracoForm", new { FormGuid = Model.Content.ContactForm.ToString() })    
                }
                
            </div>

        </div>
    </div>
</section>